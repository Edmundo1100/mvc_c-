@model SalesWebMvc.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Vendedor.Name" class="control-label"></label>
                <input asp-for="Vendedor.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DateNascimento" class="control-label"></label>
                <input asp-for="Vendedor.DateNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label">Salario Base</label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartmentId" class="control-label"></label>
                <select asp-for="Vendedor.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" 
                                                                        class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>